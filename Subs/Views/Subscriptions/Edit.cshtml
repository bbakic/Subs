@model Subs.Models.Subscription

@{
    ViewData["Title"] = "Edit";
}

<h4>Subscriptions -> Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" id="createdate" type="text" class="form-control" value="@Model.CreateDate.ToString("dd'/'MM'/'yyyy")" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceCategoryId" class="control-label"></label>
                <input asp-for="ServiceCategoryId" class="form-control" value="@Model.ServiceCategoryId" hidden />
                <select asp-for="ServiceCategoryId" class="form-control" asp-items="ViewBag.ServiceCategoryId" disabled></select>
                <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" id="startdate" type="text" class="form-control" value="@Model.StartDate.ToString("dd'/'MM'/'yyyy")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" id="expirydate" type="text" class="form-control" value="@Model.ExpiryDate.ToString("dd'/'MM'/'yyyy")" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RenewalDayOfMonth" class="control-label"></label>
                <input asp-for="RenewalDayOfMonth" class="form-control" />
                <span asp-validation-for="RenewalDayOfMonth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAutomaticRenewal" /> @Html.DisplayNameFor(model => model.IsAutomaticRenewal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FlatAmount" class="control-label"></label>
                <input asp-for="FlatAmount" class="form-control" />
                <span asp-validation-for="FlatAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/lib/jqueryui/jquery-ui.css">
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#createdate").datepicker({ dateFormat: 'dd/mm/yy' });
        });
        $(function () {
            $("#startdate").datepicker({ dateFormat: 'dd/mm/yy' });
        });
        $(function () {
            $("#expirydate").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
