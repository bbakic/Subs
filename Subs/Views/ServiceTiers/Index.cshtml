@model IEnumerable<Subs.Models.ServiceTier>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h4>Categories -> @ViewBag.service.ServiceCategory.Name -> @ViewBag.service.Name</h4>
        </div>
        <div class="col-3">
            <a asp-action="Create" asp-route-service="@ViewBag.service.Id" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MinQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MinQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Services" asp-action="Index" asp-route-category="@ViewBag.service.ServiceCategoryId">Back to List</a>
</div>
